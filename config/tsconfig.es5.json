{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "../dist/es5",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@resources/*": ["./public/resources/*"]
    },
    "baseUrl": "./",
    "lib":[
      "es6",
      "dom"
    ]
  },
  "lib": [
    "webworker"
  ],
  "include": [
    "../src/**/*",
    "../public/**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}
